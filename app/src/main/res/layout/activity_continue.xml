<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Continue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:background="#000000">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gameplaybackground">

        </ImageView>


        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="skip,levelbord,hint"
            app:flow_horizontalGap="5dp"
            android:layout_margin="10dp"
            app:flow_wrapMode="chain"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/skip"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/skip"
            app:layout_constraintDimensionRatio="1:1">

        </ImageView>

        <ImageView

            android:id="@+id/levelbord"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/level_board"
            app:layout_constraintDimensionRatio="1:1">

        </ImageView>

        
        <ImageView

            android:id="@+id/hint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/hint"
            app:layout_constraintDimensionRatio="1:1"/>


<!--        <ImageView-->
<!--            android:id="@+id/que"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            app:layout_constraintBottom_toBottomOf="@+id/imageView"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintHorizontal_bias="0.0"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/flow"-->
<!--            app:layout_constraintVertical_bias="1.0">-->

<!--        </ImageView>-->

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vpager"
            android:layout_width="299dp"
            android:layout_height="480dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2.4"
        android:background="#000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/anstext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:textSize="25dp"
                android:layout_weight="1"
                android:background="@drawable/round2"
                android:textColor="#000000" />

            <Button
                android:id="@+id/remove"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:background="@drawable/delete"/>

            <Button
                android:id="@+id/sub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SUBMIT"
                android:textColor="#ffffff"
                android:background="#000000"
                android:textStyle="bold"
                android:layout_weight="1.6"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/one"
                android:background="@drawable/round"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textColor="#ffffff">

            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/two"
                android:background="@drawable/round"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textColor="#ffffff">

            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/three"
                android:background="@drawable/round"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textColor="#ffffff">

            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/four"
                android:background="@drawable/round"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textColor="#ffffff">

            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:id="@+id/five"
                android:background="@drawable/round"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textColor="#ffffff">

            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6"
                android:id="@+id/six"
                android:background="@drawable/round"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textColor="#ffffff">

            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7"
                android:id="@+id/seven"
                android:background="@drawable/round"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textColor="#ffffff">

            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8"
                android:id="@+id/eight"
                android:background="@drawable/round"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textColor="#ffffff">

            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9"
                android:id="@+id/nine"
                android:background="@drawable/round"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textColor="#ffffff">

            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/zero"
                android:background="@drawable/round"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textColor="#ffffff">

            </Button>

        </LinearLayout>









    </LinearLayout>

</LinearLayout>